root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true
charset = utf-8

[*.{js,json,coffee,json,less,sass,scss,css}]
indent_size = 2

[*.{config,cshtml,html,resx}]
indent_size = 4

[*.md]
indent_size = 2

[nodemon.json]
insert_final_newline = false

[node_modules/**.js]
codepaint = false
